<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="referral_status_codes" resource="default" engine="innodb" comment="Referral Status Data">
        <column xsi:type="int"
                name="id"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="ID"
        />
        <column xsi:type="varchar"
                name="code"
                nullable="false"
                length="50"
                comment="Code"
        />
        <column xsi:type="varchar"
                name="description"
                nullable="false"
                default=""
                length="255"
                comment="Description"
        />
        <column xsi:type="timestamp"
                name="created_at"
                on_update="false"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Created At"
        />
        <column xsi:type="timestamp"
                name="updated_at"
                on_update="true"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Updated At"
        />
        <column xsi:type="timestamp"
                name="deleted_at"
                nullable="true"
                default="NULL"
                comment="Deleted At"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="REFERRAL_STATUS_CODES_CODE">
            <column name="code"/>
        </constraint>
    </table>
    <table name="referral" resource="default" engine="innodb" comment="Referral Data">
        <column xsi:type="int"
                name="entity_id"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Entity ID"
        />
        <column xsi:type="varchar"
                name="first_name"
                nullable="true"
                length="255"
                comment="First Name"
        />
        <column xsi:type="varchar"
                name="last_name"
                nullable="true"
                length="255"
                comment="Last Name"
        />
        <column xsi:type="varchar"
                name="email"
                nullable="false"
                length="255"
                comment="Email"
        />
        <column xsi:type="varchar"
                name="telephone"
                nullable="true"
                length="16"
                comment="Telephone"
        />
        <column xsi:type="int"
                name="status_id"
                unsigned="true"
                nullable="false"
                default="1"
                comment="Status ID"
        />
        <column xsi:type="int"
                name="customer_id"
                unsigned="true"
                nullable="false"
                identity="false"
                comment="Customer ID"
        />
        <column xsi:type="timestamp"
                name="created_at"
                on_update="false"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Created At"
        />
        <column xsi:type="timestamp"
                name="updated_at"
                on_update="true"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Updated At"
        />
        <column xsi:type="timestamp"
                name="deleted_at"
                nullable="true"
                default="NULL"
                comment="Deleted At"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="REFERRAL_EMAIL">
            <column name="email"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="REFERRAL_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="referral" column="customer_id"
                    referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="REFERRAL_STATUS_ID_REFERRAL_STATUS_CODES_ID"
                    table="referral" column="status_id"
                    referenceTable="referral_status_codes" referenceColumn="id"
                    onDelete="CASCADE"/>
        <index referenceId="REFERRAL_FIRST_NAME" indexType="btree">
            <column name="first_name"/>
        </index>
        <index referenceId="REFERRAL_LAST_NAME" indexType="btree">
            <column name="last_name"/>
        </index>
        <index referenceId="REFERRAL_TELEPHONE" indexType="btree">
            <column name="telephone"/>
        </index>
        <index referenceId="REFERRAL_STATUS_ID" indexType="btree">
            <column name="status_id"/>
        </index>
        <index referenceId="REFERRAL_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="REFERRAL_CREATED_AT" indexType="btree">
            <column name="created_at"/>
        </index>
        <index referenceId="REFERRAL_UPDATED_AT" indexType="btree">
            <column name="updated_at"/>
        </index>
        <index referenceId="REFERRAL_DELETED_AT" indexType="btree">
            <column name="deleted_at"/>
        </index>
    </table>
</schema>
